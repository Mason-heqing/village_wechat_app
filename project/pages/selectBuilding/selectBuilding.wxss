/* pages/selectBuilding/selectBuilding.wxss */
.container{
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  padding: 0;
  background: rgb(242, 242, 242);
}
.building-search{
  position: relative;
  padding:30rpx;
  border-bottom: 1rpx solid #ccc;
}
.building-search .search-img{
  position: absolute;
  top: 45rpx;
  left: 40rpx;
  width: 40rpx;
  height: 40rpx;
}
.building-search .search-img>image{
  width: 100%;
  height: 100%;
}
.building-search input{
  height: 60rpx;
  padding-left: 60rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  text-align: center;
  background: rgb(242, 242, 242);
}
.arrow>image{
  width: 20rpx;
  height: 20rpx;
}
.list-item{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  padding: 30rpx 20rpx 30rpx 30rpx;
  border-bottom:1rpx solid #eee;
  background: #fff;
}
.building-name{
  flex-grow: 1
}