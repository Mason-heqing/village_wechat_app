<!--pages/forgetPassword/forgetPassword.wxml-->
<view class="container">
  <view class="page-section">
    <view class="set-telephone">
        <view class="tips-info">
           <!-- <text>{{titleName}}</text> -->
           <image wx:if="{{'wx78a03393552c2ceb' == wxAppId}}" src="../images/other_logo.png"></image>
           <image wx:else src="../images/logo.png"></image>
        </view>
        <form bindsubmit="formSubmit">
          <view class="new-phone">
             <image src="../images/phone_login.png"></image>
             <input name="phone" placeholder="请输入新手机号码" maxlength="11" bindinput="phone" value="{{form.phone}}"></input>
          </view>
          <view class="code">
            <image src="../images/password_login.png"></image>
            <input name="code" placeholder="请输入验证码" bindinput="code" value="{{form.code}}"></input>
            <text class="code-btn {{buttonDisable?'grey':'blue'}}" bindtap="sendCode">{{sendCode}}</text>
          </view>
          <view class="send-btn">
            <!-- <button class='{{newPhoneContent && codeContent ?"nodisabled":"disabled"}}' form-type="submit">下一步</button> -->
            <button wx:if="{{newPhoneContent && codeContent}}"  class='nodisabled' form-type="submit">下一步</button>
            <button wx:else  class='nodisabled' class='disabled' disabled="true" form-type="submit">下一步</button>
          </view>
          <!-- <view class="agreement-info" hidden="{{service}}">
            <text class="representative">注册代表您已同意</text><text class="service">《用户协议服务》</text>
          </view> -->
        </form>
    </view>
  </view>
</view>

