/* pages/edit/edit.wxss */
.container{
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  padding: 0;
  background: rgb(242,242,242);
}
.edit{
  /* padding: 0 30rpx; */
}
.edit-info{
  margin-top: 4rpx;
  padding: 0 30rpx;
  background: #fff;
}
.title{
  padding: 15rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  
}

.list-item{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  padding: 30rpx 0rpx;
  /* background: #fff; */
  border-bottom: 1rpx solid #eee;
}
.item-name>image{
  width: 25rpx;
  height: 25rpx;
}
.item-left{
  flex-grow: 1;
}
.item-left text{
  color: red;
}
.tips>image{
  width: 22rpx;
  height: 22rpx;
}
.enclosure{
  margin-top: 20rpx;
  background: #fff;
}
.enclosure-title{
  padding:30rpx;
  font-size: 26rpx;
}
.enclosure-title text{
  color: #888;
}
.upfile{
  display: flex;
   flex-flow: wrap;
   padding: 20rpx 0;
   background: #fff;
}
.enclosure-img{
  width: 33.3333%;
  margin-top: 10rpx;
  text-align: center;
  
}
.enclosure-img>image{
  width:160rpx;
  height:160rpx;
}
.tips{
  padding: 0rpx 30rpx 30rpx 30rpx;
  background: #fff;
}
.tips text{
  padding-left: 10rpx;
  color: #999;
  font-size: 22rpx;
}
.enclosure-btn button{
  width: 70% !important;
  height: 88rpx;
  line-height: 2;
  background: #5656ED;
  color: #fff;
  /* font-weight: 100; */
}
.enclosure-btn{
  width: 100%;
  height: 88rpx;
  position: absolute;
  bottom: 30rpx;
}
.file{
  padding:0 50rpx;
 background: #fff;
}
.repair-file{
  position: relative;
}
.file-show{
  width:120rpx;
  height: 120rpx;
}
.file-show>image{
  width: 100%;
  height: 100%;
}
.file-close{
  position: absolute;
  top: -22rpx;
  left:143rpx;
  padding: 10rpx;
  width: 40rpx;
  height: 40rpx;
  /* background: #888;
  color: #fff;
  line-height: 40rpx;
  text-align: center;
  border-bottom-left-radius:50%; */
}
.file-close>image{
  width: 30rpx;
  height: 30rpx;
}
.file-content{
  display: flex;
  flex-wrap: wrap;
}
.repair-file,.uploadFile{
  display: flex;
  justify-content: center;
  width: 33.3333%;
  margin-bottom: 30rpx;
}
.uploadFile .add-file{
  width: 120rpx;
  height: 120rpx;
}
.add-file>image{
  width: 100%;
  height: 100%;
}
.item-name .right_img{
  width: 25rpx;
  height: 25rpx;
}
.item-name picker{
  text-align: right;
}
.grey{
  color: #999
}
.black{
  color: #333;
}