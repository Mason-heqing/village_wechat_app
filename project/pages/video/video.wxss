/* pages/video/video.wxss */
.container{
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  padding: 0;
}
.realTimeImg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height:calc(100%-129px);
  /* background: yellowgreen; */
}
.realTimeImg>image{
  width: 100%;
  height: 100%;
}
.tool{
  position: absolute;
  left: 0;
  bottom:0rpx;
  width: 100%;
  height: 258rpx;
  /* background-color:red; */
}
.times{
  padding:36rpx;
  text-align: center;
  color: #666;
}
.tool-content{
  display: flex;
  flex-direction: row;
}
.camera,.openDoor{
  display: flex;
  justify-content: center;
  width: 50%;
  
}
.camera .btn,.openDoor .btn{
  width: 260rpx !important;
  height: 88rpx;
  text-align: center;
  border-radius: 16rpx;
}
.camera .btn{
  border:2rpx solid rgba(86,86,237,1);
  color: #5656ED;
  /* line-height:1.8; */
  line-height: 88rpx;
}
.openDoor .btn{
  background:rgba(86,86,237,1);
  box-shadow:0px 10px 20px rgba(86,86,237,0.3);
  color: #fff;
  /* line-height: 2; */
  line-height: 88rpx;
}