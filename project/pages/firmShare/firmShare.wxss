/* pages/firmShare/firmShare.wxss */
.container {
  position: absolute;
  padding: 0;
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
}

.my-header {
  width: 100%;
  background: #f0f0f0;
  padding: 18rpx 40rpx;
}

.my-header text {
  font-size: 32rpx;
  color: #666;
}

.my-info {
  width: 100%;
}

.info-content {
  padding: 10rpx 46rpx;
}

.info-content text {
  font-size: 30rpx;
}

.page-body {
  width: 100%;
}


button {
  padding: 0 !important;
  width: 100% !important;
  height: 88rpx;
  line-height: 88rpx !important;
  font-size: 30rpx;
  background-color:#5656ED;
  color: #fff;
}

.section {
  display: flex;
  padding: 0 38rpx;
  height: 120rpx;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
  background-color: #fff;
}
.section-face{
  padding:38rpx;
  background: #fff;
}
.section__title {
  flex-grow: 1;
  font-size: 30rpx;
}

.section__title .star {
  color: #EB102C;
}

.section_name {
  flex-grow: 2;
  justify-content: flex-end;
  font-size: 30rpx;
}

.section_name .gander {
  text-align: right;
}

.section_name .gander label {
  padding-left: 30rpx;
}

.section_name .photo {
  position: absolute;
  top: 10rpx;
  right: 26rpx;
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
}

.section_name .photo>image {
  width: 100%;
  height: 100%;
}
.section_name .right_img{
  width: 30rpx;
  height: 30rpx;
}
.btn-area {
  display: flex;
  justify-content: center;
  box-sizing: border-box;
  padding: 30rpx 110rpx;
  background: #f2f2f2;
}

.btn-area>button {
  width: 90%;
}
.uploadInfo{
  position: absolute;
  top: 0;
  z-index: 999;
  width: 100%;
  height: 100%;
  text-align: center;
  background-color: rgba(0,0,0,0.5);
}
.uploadInfo>image{
  position: absolute;
  top:50%;
  left:50%;
  margin-top:-482rpx;
  margin-left: -300rpx;
  width:600rpx;
  height:964rpx;
}
picker text{
  padding-right: 10rpx;
}
.face-title{
  margin-bottom:30rpx;
}
.face-img{
  position: relative;
  margin-left: 30rpx;
}
.face-select{
  /* position: absolute;
  top:0%;
  left:0; */
  padding: 20rpx;
  width: 180rpx;
  height: 180rpx;
}
.face-select>image{
  width: 100%;
  height: 100%;
  border-radius:12rpx;
}
.face-close{
  position: absolute; 
  top: 8rpx;
  left:172rpx;
  width: 40rpx;
  height: 40rpx;
  /* background: #888; */
  color: #fff;
  line-height: 40rpx;
  text-align: center;
  border-bottom-left-radius:50%;
}
.face-close>image{
  width: 40rpx;
  height: 40rpx;
}
.nodisabled {
 background: #5656ED !important;
 color: #fff !important;
 opacity: 1;
 box-shadow: 0rpx 10rpx 20rpx rgba(86,86,237,0.3);

}
.modal-title{
  border-bottom: 1rpx solid #ccc;
  padding: 30rpx;
}
.model-body{
  height:170rpx;
  line-height: 170rpx;
  text-align: center;
}

/* 开门密码样式 */

.mask{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0,0,0,0.4);
  z-index: 10;
}

.modal-content{
  position: absolute;
  z-index: 99;
  width: 100%;
  /* height: 80%; */
  background-color: #fff;
  border-radius: 10rpx;
}

.main-content{
  flex: 1;
  height: 100%;
  overflow-y: hidden; 
}
.modal-btn-close{
  position: absolute;
  z-index: 999;
  right:0rpx;
  top:0rpx;
  width: 60rpx;
  height:80rpx;
  line-height: 80rpx;
  /* background: red; */
  vertical-align: center;
  text-align: center;
}
.modal-btn-close>image{
    width:40rpx;
    height: 40rpx;
}
.changePassword{
  display: flex;
  flex-direction: row;
  position: absolute;
  left: 0;
  bottom:50rpx;
  width: 100%;
  
}
.changePassword>button{

   width: 30% !important;
   padding: 12px 24px;
   font-size:28rpx;
   color:#fff;
   background:#5656ED
}