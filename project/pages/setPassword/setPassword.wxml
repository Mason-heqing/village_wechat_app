<!--pages/setPassword/setPassword.wxml-->
<view class="container">
  <view class="page-section">
    <view class="set-password">
        <form bindsubmit="formSubmit">
           <view class="form-bg">
             <view class="old-password">
             <!-- <image src="../images/password.png"></image> -->
             <input type="password" name="oldPassword" placeholder-style="color:#999;" value="{{form.oldPassword}}" bindinput='oldPassword' placeholder="请输入旧密码"></input>
           </view>
           <view class="new-password">
            <!-- <image src="../images/password.png"></image> -->
            <input type="password" name="newPassword" placeholder-style="color:#999;" value="{{form.newPassword}}" bindinput='newPassword' placeholder="请输入新密码"></input>
           </view>
           <view class="confirm-password">
             <!-- <image src="../images/password.png"></image> -->
             <input type="password" name="againPassword" placeholder-style="color:#999;" value="{{form.againPassword}}" bindinput='againPassword' placeholder="再次输入新密码"></input>
           </view>
           <!-- <view class="tips-info">
             <image src="../images/password_tips.png"></image>
             <text>  密码为6~12位，支持数字和字母，区分大小写</text>
           </view> -->
           </view>
           <view class="confirm-btn">
             <button class='{{oldPasswordContent && newPasswordContent && againPasswordContent ?"nodisabled":"disabled"}}' form-type="submit">确定</button>
           </view>
        </form>
    </view>
  </view>
</view>
