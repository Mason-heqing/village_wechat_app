/* pages/rechargeMsg/rechargeMsg.wxss */
page {
  width: 100%;
  height: 100%;
}
.wrapper_item {
  display: flex;
  align-items: center;
  
  justify-content: space-between;
  width: 690rpx;
  height: 93rpx;
  margin: 0 auto;
  /* border: 1rpx solid red; */
  border-bottom: 1rpx solid #E4E4E4;
}
.wrapper_msg {
  ont-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 600;
  margin-left: 30rpx;
  margin-top: 20rpx;
  color: #111111;
  opacity: 1;
}
.sum_msg {
  width: 690rpx;
  height: 228rpx;
  margin: 15rpx auto;

}
.sum_msg-number {
  width: 128rpx;
  height: 45rpx;
  margin-bottom: 43rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  line-height: 45rpx;
  color: #111111;
  opacity: 1;

}
.number_box {
  display: flex;
  border-bottom: 1rpx solid #E4E4E4;
}
.number_infoA {
  height: 59rpx;
  font-size: 46rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #111111;
  opacity: 1;
}
.number_infoB {
  font-size: 42rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 59rpx;
  color: #111111;
  opacity: 1;
  margin-bottom: 10rpx;
  margin-left: 10rpx;
}
.balance {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  margin-top: 18rpx;
  line-height: 37rpx;
  color: #999999;
  opacity: 1;
}
.number_title {
  font-size: 32rpx;
  height: 102rpx;
  line-height: 102rpx;
  padding-left: 30rpx;
  font-family: Microsoft YaHei;
  color: #888888;
  font-size: 400;
  background: #F5F5F5;
  opacity: 1;
}
.payment_box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 690rpx;
  height: 109rpx;
  margin: 0 auto;
  border-bottom: 1rpx solid #E4E4E4;
}
.payment_left {
  display: flex;
  align-items: center;
}
.payment_box image {
  width: 85rpx;
  height: 85rpx;
}
.payment_title {
  margin-left: 22rpx;
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #3A3A3A;
  opacity: 1;
}
.bottom_pay {
  margin-top: 130rpx;
}
.bottom_pay button {
  width: 610rpx;
  background: #5656ED;
  font-size: 36rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #FFFFFF;
  opacity: 1;
}