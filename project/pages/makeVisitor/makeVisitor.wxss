/* pages/makeVisitor/makeVisitor.wxss */
.containers{
  position:absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  padding: 0;
  background: #f0f0f0;
}
.page-header{
  margin: 10rpx 0;
  display:flex;
  flex-direction: row;
  width: 100%;
  background-color: #fff;
}
.header-left,.header-right{
  width: 50%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.header-left{
  border-right: 1rpx solid #ddd;
}
.currentIndex text{
  padding-bottom:6rpx;
  border-bottom:4rpx solid #5656ED;
}
.page-body{
  padding: 20rpx 30rpx;
}
.list-item{
  width: 100%;
  height: 290rpx;
  position: relative;
  margin-bottom: 30rpx;
  background-color: #fff;
  box-shadow: 0rpx 4rpx 24rpx rgba(124, 124, 124, 0.3);
  border-radius: 10rpx;
}
.list-item .item-up{
  height: 180rpx;
}
.item-bg{
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.item-info{
  position: absolute;
  top: 0;
  left:0;
  z-index: 99;
  display:flex;
  flex-direction: row;
  padding: 30rpx;
}
.item-bg>image{
  width: 100%;
  height: 180rpx;
}
.up-left{
  padding-left:50rpx;
}
.item-info .up-left>image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.up-right{
  padding-left:20rpx;
}
.up-right .up-title{
  padding-top: 10rpx;
}
.up-right .up-content{
  padding-top: 20rpx;
  font-size: 24rpx;
  color:rgb(153, 153, 153);
}
.up-right .up-content>image{
  width: 20rpx;
  height: 20rpx;
  padding-right: 10rpx;
}
.item-down{
  /* position: relative; */
  /* top: 138rpx; */
  /* left: 0; */
  display:flex;
  flex-wrap: nowrap;
  border-top: 1rpx solid #ddd;
  padding:30rpx;
  align-items: center;
}
.item-down .down-left{
  flex-grow: 1;
  color:#7C7C7C;
  font-size: 26rpx;
}
.item-down .down-right text{
  padding: 10rpx 30rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}
.item-down .down-right text:first-child{
  margin-right:20rpx;
}
.item-down .down-right text:last-child{
  margin: 0 !important;
}
.item-down .down-right .reject{
  border:1rpx solid #5656ED ;
  color: #5656ED;
}
.item-down .down-right .consent{
  border:1rpx solid #5656ED;
  background: #5656ED;
  color: #fff;
}
.item-down .down-right .delect{
  border:1rpx solid #E73047;
  color: #E73047;
}
.item-down .down-right .cancel{
  border:1rpx solid #999;
  color: #999;
}
.no-message{
  padding-top: 190rpx;
}
.no-image{
  text-align: center;
}
.no-image>image{
  width: 380rpx;
  height: 358rpx;
}
.no-content{
  text-align: center;
}
