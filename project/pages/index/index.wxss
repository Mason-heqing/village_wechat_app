/**index.wxss**/
.container{
  padding: 0;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
swiper{
  height:340rpx;
}
.swiper{
  padding:0 30rpx;
}
.swiper-item image{
  width: 100%;
  height:340rpx;
  border-radius: 10rpx; 
}
.select-adress{
  padding:30rpx;
}
.adress-content{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.select-adress .location{
  width: 40rpx;
  height:40rpx;
   
}
.noAddress{
  display: flex;
  align-items: center;
}
.select-adress picker{
 /* flex-grow:2; */
 margin: 0 10rpx;
 /* color: #fff; */
}
.select-adress text{
  margin: 0 10rpx;
 /* color: #fff; */
}
.currentText{
  padding: 10rpx;
  display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 3;
overflow: hidden;
}
.select-adress .triangle{
  width:17rpx;
  height:12rpx;
  margin-top: 9rpx;
}
.select-text{
  padding-left: 10rpx;
  font-size:32rpx;
 /* color: #fff; */
}
.lampshade{
  position:absolute;
  top: 400rpx;
  left: 0;
  width: 100%;
  height: 80rpx;
  background:rgba(0,0,0,0.3);
}
.progress{
  /* width: 100%; */
  height: 12rpx;
  background: rgb(249,94,90);
}
.notice{
  padding: 30rpx;
  font-size: 30rpx;
}
.notice .notice-header{
  display: flex;
  flex-direction: row;
}

.notice .notice-header .notice-title{
 width: 60%;
 display: flex;
 align-items: center;
}
.notice .notice-header .notice-more{
   width: 40%;
   text-align: right;
}
.notice-title>image{
 width: 32rpx;
 height: 32rpx;
}
.notice-title>text{
  margin-left: 10rpx;
  font-size: 32rpx;
}
.notice-more>text{
  margin-right: 10rpx;
  color: #999;
}
.notice-more>image{
  width: 30rpx;
  height: 30rpx;
}
.model-img{
  box-sizing:border-box;
  font-size: 0
}
.notice-body{
  margin-top: 20rpx;
  height: 140rpx;
  /* border:1rpx solid #ccc;
  border-radius: 10rpx; */
  box-shadow:2rpx 2rpx 10rpx 5rpx #eee;
}
.noContent{
  padding-top: 10rpx;
  text-align: center;
}
.noContent>image{
  width: 130rpx;
  height:100rpx;
}
.noContent text{
 display:block;
 color: #888;
 font-size: 28rpx;
}
.tool{
  display: flex;
  flex-direction: row;
  flex-wrap:wrap;
}
.tool-model{
   width: 25%;
   height: 160rpx;
   margin-bottom: 40rpx;
   text-align: center;
}
.model-img>image{
  width: 128rpx;
  height:128rpx;
  border-radius: 50%;
}
.tool-model text{
  font-size:28rpx;
}
.message-info{
   display: inline-block;
  width: 12rpx;
  height: 12rpx;
  background-color:red;
  border: 2rpx;
  border-radius: 50%; 
  /* vertical-align: middle; */
  margin-top: -30rpx;
  margin-left:10rpx;
}
.modal-title{
  border-bottom: 1rpx solid #ccc;
  padding: 30rpx;
}
.model-body{
  height:170rpx;
  line-height: 170rpx;
  text-align: center;
}