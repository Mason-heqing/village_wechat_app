/* pages/houseThrough/houseThrough.wxss */
.container {
  position: absolute;
  padding: 0;
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
}

.my-header {
  width: 100%;
  background: #f0f0f0;
  padding: 18rpx 40rpx;
}

.my-header text {
  font-size: 32rpx;
  color: #666;
}

.my-info {
  width: 100%;
}

.info-content {
  padding: 10rpx 46rpx;
}

.info-content text {
  font-size: 30rpx;
}

.page-body {
  width: 100%;
}

.btn-area {
  margin-top:100rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.btn-cancel{
  display: flex;
  flex-wrap: nowrap;
  margin-top:140rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.btn-area>button{
  width: 100% !important;
  height: 88rpx;
  line-height: 2;
  font-size: 30rpx;
  background-color:#E73047;
  color: #fff;
}
.btn-cancel>button{
  width: 240rpx !important;
  font-size: 30rpx;
  height: 88rpx;
  line-height: 2;
  background-color:#E73047;
  color: #fff;
  /* font-weight: 100; */
}
button.agin{
  background: #5656ED;
}
.section {
  display: flex;
  padding:30rpx;
  /* height: 90rpx; */
  align-items: center;
  border-bottom: 1rpx solid #F6F6F6;
  background-color: #fff;
}
.section-face{
  padding:38rpx;
}
.section__title {
  display: flex;
  align-items: center;
  flex-grow: 1;
  font-size:30rpx;
}

.section__title>image{
  width: 28rpx;
  height: 28rpx;
  padding-right: 10rpx;
}
.section_name {
  flex-grow: 2;
  justify-content: flex-end;
  font-size: 30rpx;
  text-align: right;
}

.section_name .gander {
  text-align: right;
}

.section_name .gander label {
  padding-left: 30rpx;
}

.section_name .photo {
  position: absolute;
  top: 10rpx;
  right: 26rpx;
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
}

.section_name .photo>image {
  width: 100%;
  height: 100%;
}
.section_name .right_img{
  width: 30rpx;
  height: 30rpx;
}
.section_name picker{
  text-align: right;
}
.btn-area {
  display: flex;
  justify-content: center;
}
.btn-area>button {
  width: 80% !important;
  height: 88rpx;
  line-height: 2;
  /* font-weight: 100; */
  background: #E73047;
}
.reason{
  margin-top: 20rpx;
  padding: 30rpx;
  background: #fff;
}
.reason-content{
  padding-top: 30rpx;
}
.reason-content textarea{
  width:91.5%;
  height: 223rpx;
  padding:14rpx 30rpx;
  background: #eee;
  border-radius: 10rpx;
  color: #666;
}