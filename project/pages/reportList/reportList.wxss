/* pages/reportList/reportList.wxss */
.container{
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  padding: 0;
  background: rgb(242, 242,242);
}
.page-section{
  padding: 30rpx;
}
.report-list{
   /* padding:0 30rpx; */
   /* border: 1rpx solid #ccc; */
   background: #fff;
   border-radius: 10rpx;
   margin-bottom: 20rpx;
   box-shadow:0rpx 4rpx 24rpx rgba(238,238,238,1);
}
.list-header{
  display: flex;
  flex-wrap: nowrap;
  justify-items: center;
  align-items: center;
  padding:20rpx 30rpx;
  border-bottom:1rpx solid #eee;
}
.city{
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-grow: 1;
  font-size:26rpx;
  color: #666;
}
.city .dot{
  width: 4rpx;
  height: 4rpx;
  background: #999;
  border-radius: 50%;
  margin: 0 4rpx;
}
.times{
  font-size:26rpx;
  color: #666;
}
.adress{
  padding: 30rpx 0 15rpx 0;
}
.report-content{
  padding: 15rpx 0 30rpx 0;
  font-size: 28rpx;
}
/* .adress,.report-content,.proposal{
  padding: 30rpx 0;
} */
.report-content{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
}
.content-info{
  flex-grow: 1;
}
.details>image{
  width: 30rpx;
  height: 30rpx;
}
.list-body{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  padding: 0 30rpx;
}
.left{
  flex-grow: 1;
}
.right>image{
  width: 130rpx;
  height: 130rpx;
}
.no-message{
  padding-top: 190rpx;
}
.no-image{
  text-align: center;
}
.no-image>image{
  width: 380rpx;
  height: 358rpx;
}
.no-content{
  margin: 50rpx 0 150rpx 0;
  text-align: center;
  color: #666;
}
.again-get>button{
  height: 88rpx;
  line-height: 2;
  font-weight: 100;
  color: #fff;
  background: #5656ED;
} 
.show-content{
word-break:break-all;
display: -webkit-box;
overflow: hidden;
text-overflow: ellipsis;
word-wrap: break-word;
white-space: normal !important;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
}