/* pages/connecting/connecting.wxss */
.container{
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  padding: 0;
}
.times{
  padding:0 0 30rpx 0;
  text-align: center;
  background: #000;
  color: #fff;
}
.videos>image{
  width: 100%;
  height: 100%;
}
.tool{
  width: 100%;
  position:absolute;
  bottom:0;
  left:0;
  background: #000;
}
.voice-server{
  padding: 60rpx 0;
  width: 100%;
  height: 169rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.silence-set{
  justify-content: flex-end  !important;
}
.server-item{
  width: 33.3333%;
  color: #fff;
  text-align: center;
}
.server-img{
  height: 130rpx;
  margin-bottom: 20rpx;
}
.server-img>image{
  width: 120rpx;
  height: 120rpx;
}
.silence-set-icon>image{
  margin-top: 60rpx;
  width: 60rpx !important;
  height: 60rpx !important;
}
.tool-btn{
  display: flex;
  flex-direction:row;
  padding:20rpx 0 60rpx 0;
}
.tool-server{
  width: 50%;
  display: flex;
  flex-direction: column;
}
.server-content{
  display: flex;
  justify-content: center;
  width: 100%;
}
.btn-server{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 260rpx;
  height: 88rpx;
  border-radius: 44rpx;
}
.hang-up{
  background: #FF3B30;
}
.facetalk_answer{
  background: #4DD865;
}
.open-door{
  background: #5656ED;
}
 .dev{
  padding-top: 30rpx;
  color: #fff;
  text-align: center;
}
.open-door>image,.facetalk_answer>image{
  width: 40rpx;
  height:50rpx;
}
.hang-up>image{
 width: 60rpx;
 height: 60rpx;
}